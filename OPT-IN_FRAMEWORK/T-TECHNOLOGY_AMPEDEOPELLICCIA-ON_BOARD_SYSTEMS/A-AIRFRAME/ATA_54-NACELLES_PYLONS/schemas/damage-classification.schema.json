{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Damage Classification Schema",
  "type": "object",
  "required": ["damage_id", "classification", "severity"],
  "properties": {
    "damage_id": { "type": "string" },
    "classification": { "type": "string", "enum": ["impact", "corrosion", "fatigue", "environmental"] },
    "severity": { "type": "string", "enum": ["minor", "major", "critical"] },
    "location": { "type": "string" },
    "description": { "type": "string" }
  }
}
