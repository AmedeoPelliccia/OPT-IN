{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Inspection Schema",
  "type": "object",
  "required": ["inspection_id", "date", "inspector", "inspection_type", "result"],
  "properties": {
    "inspection_id": { "type": "string" },
    "date": { "type": "string", "format": "date-time" },
    "inspector": { "type": "string" },
    "inspection_type": { "type": "string", "enum": ["Visual", "NDT", "Functional"] },
    "result": { "type": "string", "enum": ["pass", "fail", "conditional"] },
    "findings": { "type": "string" },
    "report_ref": { "type": "string" }
  }
}
