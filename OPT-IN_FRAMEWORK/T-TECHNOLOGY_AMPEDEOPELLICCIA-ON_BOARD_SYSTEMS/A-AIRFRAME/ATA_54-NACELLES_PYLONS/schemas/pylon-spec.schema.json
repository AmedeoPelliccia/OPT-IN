{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pylon Specification Schema",
  "type": "object",
  "required": ["part_number", "serial_number", "material", "load_path_type"],
  "properties": {
    "part_number": { "type": "string" },
    "serial_number": { "type": "string" },
    "material": { "type": "string" },
    "load_path_type": { "type": "string", "enum": ["primary", "secondary"] },
    "ultimate_load_kn": { "type": "number" },
    "attachment_points": { "type": "integer" }
  }
}
