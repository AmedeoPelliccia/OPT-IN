{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Torque Table Schema",
  "type": "object",
  "required": ["part_family", "diameter", "lube_state", "torque_nm"],
  "properties": {
    "part_family": {"type": "string"},
    "diameter": {"type": "string"},
    "lube_state": {"type": "string", "enum": ["Dry", "Lubricated"]},
    "torque_nm": {"type": "number"},
    "torque_angle_deg": {"type": ["number", "string"]},
    "notes": {"type": "string"}
  }
}
