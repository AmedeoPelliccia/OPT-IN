{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "title": "Workmanship Record Schema",
  "type":"object",
  "required":["timestamp","msn","work_scope","location","parts","tools","operator","inspector","results"],
  "properties":{
    "timestamp":{"type":"string", "format":"date-time"},
    "msn":{"type":"string"},
    "work_scope":{"type":"string", "description":"e.g., Connector Pinning, Splice, Fastener Torque"},
    "location":{"type":"string", "description":"Zone, Station, or Component ID"},
    "parts":{"type":"array","items":{"type":"object","required":["pn","lot","qty"]}},
    "tools":{"type":"array","items":{"type":"object","required":["id","cal_due"]}},
    "operator":{"type":"string", "description":"Technician ID"},
    "inspector":{"type":"string", "description":"Inspector ID"},
    "results":{"type":"object", "description":"e.g., torque_value_nm, resistance_mohms"}
  }
}
