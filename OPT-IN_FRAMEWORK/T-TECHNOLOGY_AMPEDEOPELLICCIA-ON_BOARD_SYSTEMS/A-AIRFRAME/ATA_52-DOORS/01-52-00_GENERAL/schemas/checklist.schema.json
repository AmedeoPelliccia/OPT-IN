{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "title": "Checklist Schema",
  "type":"object",
  "required":["id","title","steps"],
  "properties":{
    "id":{"type":"string"},
    "title":{"type":"string"},
    "steps":{"type":"array","items":{
      "type":"object",
      "required":["seq","text","hold","evidence"],
      "properties":{
        "seq":{"type":"integer"},
        "text":{"type":"string"},
        "hold":{"type":"boolean"},
        "evidence":{"type":"string"}
      }
    }}
  }
}
