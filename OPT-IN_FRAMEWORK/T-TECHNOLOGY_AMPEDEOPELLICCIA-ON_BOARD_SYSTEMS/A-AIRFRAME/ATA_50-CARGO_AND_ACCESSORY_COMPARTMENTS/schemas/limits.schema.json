{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ampel360.com/schemas/ata50/limits.schema.json",
  "title": "Compartment Load Limits",
  "type": "object",
  "properties": {
    "limitType": {
      "type": "string",
      "enum": ["Point", "Line", "Area", "Seat_Track"]
    },
    "metric": {
      "type": "string"
    },
    "limit": {
      "type": "number",
      "minimum": 0
    },
    "unit": {
      "type": "string"
    },
    "testMethod": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  },
  "required": ["limitType", "metric", "limit", "unit"]
}
