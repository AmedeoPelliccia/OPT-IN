{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ampel360.com/schemas/ata50/checklist.schema.json",
  "title": "ATA 50 Inspection/Procedure Checklist",
  "type": "object",
  "properties": {
    "checklistId": {
      "type": "string",
      "pattern": "^(INSP|PROC)_50-[0-9]{2}-[0-9]{2}_"
    },
    "title": {
      "type": "string"
    },
    "revision": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "effectiveDate": {
      "type": "string",
      "format": "date"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "stepNumber": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "passCriteria": {
            "type": "string"
          }
        },
        "required": ["stepNumber", "description"]
      }
    }
  },
  "required": ["checklistId", "title", "revision", "steps"]
}
