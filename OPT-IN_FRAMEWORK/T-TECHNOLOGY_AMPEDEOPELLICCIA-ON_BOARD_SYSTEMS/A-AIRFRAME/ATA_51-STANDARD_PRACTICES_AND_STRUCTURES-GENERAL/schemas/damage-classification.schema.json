{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Damage Classification Schema",
  "type": "object",
  "required": ["damage_id", "classification", "dimensions", "location"],
  "properties": {
    "damage_id": {
      "type": "string",
      "description": "Unique identifier for the damage"
    },
    "classification": {
      "type": "string",
      "enum": ["Negligible", "Repairable", "Requires Disposition"],
      "description": "Damage classification based on assessment"
    },
    "dimensions": {
      "type": "object",
      "properties": {
        "length_mm": { "type": "number", "minimum": 0 },
        "width_mm": { "type": "number", "minimum": 0 },
        "depth_mm": { "type": "number", "minimum": 0 }
      }
    },
    "location": {
      "type": "object",
      "properties": {
        "zone": { "type": "string" },
        "station": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["zone", "station", "description"]
    },
    "damage_type": {
      "type": "string",
      "enum": ["Dent", "Scratch", "Crack", "Corrosion", "Delamination", "Impact", "Other"]
    },
    "assessed_by": {
      "type": "string",
      "description": "ID of technician who assessed the damage"
    },
    "assessment_date": {
      "type": "string",
      "format": "date-time"
    }
  }
}
