{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fuselage Specification Schema",
  "type": "object",
  "required": ["specification_id", "component_type", "material_spec", "design_limits"],
  "properties": {
    "specification_id": { "type": "string" },
    "component_type": {
      "type": "string",
      "enum": ["Frame", "Stringer", "Skin_Panel", "Floor_Beam", "Bulkhead", "Splice", "Reinforcement"]
    },
    "material_spec": {
      "type": "object",
      "required": ["material_type", "specification"],
      "properties": {
        "material_type": { "type": "string" },
        "specification": { "type": "string" },
        "manufacturer": { "type": "string" },
        "grade": { "type": "string" }
      }
    },
    "design_limits": {
      "type": "object",
      "properties": {
        "ultimate_load_kN": { "type": "number" },
        "limit_load_kN": { "type": "number" },
        "pressure_psi": { "type": "number" },
        "temperature_range_C": {
          "type": "object",
          "properties": {
            "min": { "type": "number" },
            "max": { "type": "number" }
          }
        }
      }
    },
    "geometry": {
      "type": "object",
      "properties": {
        "thickness_mm": { "type": "number" },
        "width_mm": { "type": "number" },
        "height_mm": { "type": "number" }
      }
    },
    "coating": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "specification": { "type": "string" }
      }
    }
  }
}
