{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ampel360.com/schemas/ata26/detection-schema.json",
  "title": "Fire Detection System",
  "description": "Schema for fire detection system configuration",
  "type": "object",
  "required": [
    "detection_system_id",
    "fire_zone_id",
    "detector_type",
    "detectors"
  ],
  "properties": {
    "detection_system_id": {
      "type": "string",
      "description": "Unique identifier for detection system",
      "pattern": "^FDS-[A-Z0-9]{4,12}$"
    },
    "fire_zone_id": {
      "type": "string",
      "description": "Fire zone identifier being monitored"
    },
    "detector_type": {
      "type": "string",
      "enum": ["smoke", "heat", "flame", "continuous_loop", "spot", "combination"],
      "description": "Primary detector technology"
    },
    "detectors": {
      "type": "array",
      "description": "List of individual detectors in the system",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["detector_id", "part_number", "location"],
        "properties": {
          "detector_id": {
            "type": "string"
          },
          "part_number": {
            "type": "string"
          },
          "serial_number": {
            "type": "string"
          },
          "manufacturer": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "properties": {
              "zone": {
                "type": "string"
              },
              "station": {
                "type": "number"
              },
              "description": {
                "type": "string"
              }
            }
          },
          "installation_date": {
            "type": "string",
            "format": "date"
          },
          "calibration_date": {
            "type": "string",
            "format": "date"
          },
          "next_calibration_date": {
            "type": "string",
            "format": "date"
          }
        }
      }
    },
    "detection_parameters": {
      "type": "object",
      "description": "Detection system parameters and thresholds",
      "properties": {
        "sensitivity_level": {
          "type": "string",
          "enum": ["low", "medium", "high", "auto"]
        },
        "alarm_threshold": {
          "type": "object",
          "properties": {
            "value": {
              "type": "number"
            },
            "unit": {
              "type": "string",
              "enum": ["ohms", "percent_obscuration", "temp_degF", "temp_degC"]
            }
          }
        },
        "response_time_seconds": {
          "type": "number",
          "minimum": 0,
          "maximum": 10,
          "description": "Maximum time from detection to alarm"
        },
        "false_alarm_immunity": {
          "type": "string",
          "enum": ["none", "basic", "enhanced"],
          "description": "False alarm rejection capability"
        }
      }
    },
    "control_unit": {
      "type": "object",
      "required": ["part_number", "location"],
      "properties": {
        "part_number": {
          "type": "string"
        },
        "serial_number": {
          "type": "string"
        },
        "manufacturer": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "software_version": {
          "type": "string"
        }
      }
    },
    "indication_and_warning": {
      "type": "object",
      "properties": {
        "cockpit_panel": {
          "type": "string",
          "description": "Cockpit indication panel location"
        },
        "aural_warning": {
          "type": "boolean",
          "description": "Aural warning provided"
        },
        "eicas_ecam_integration": {
          "type": "boolean",
          "description": "Integrated with EICAS/ECAM"
        },
        "remote_indication": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Additional remote indication locations"
        }
      }
    },
    "power_supply": {
      "type": "object",
      "properties": {
        "primary_bus": {
          "type": "string"
        },
        "backup_bus": {
          "type": "string"
        },
        "battery_backup": {
          "type": "boolean"
        }
      }
    },
    "testing_and_maintenance": {
      "type": "object",
      "properties": {
        "built_in_test": {
          "type": "boolean"
        },
        "test_interval_fh": {
          "type": "integer",
          "minimum": 0
        },
        "last_functional_test": {
          "type": "string",
          "format": "date"
        },
        "next_functional_test": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "certification": {
      "type": "object",
      "properties": {
        "standards_compliance": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of applicable standards (e.g., SAE AS8036, FAR 25.1203)"
        },
        "environmental_qualification": {
          "type": "string",
          "description": "Environmental qualification standard (e.g., RTCA DO-160)"
        }
      }
    },
    "traceability": {
      "type": "object",
      "properties": {
        "dpp_id": {
          "type": "string"
        },
        "installation_record": {
          "type": "string"
        },
        "checksum": {
          "type": "string"
        }
      }
    }
  }
}
