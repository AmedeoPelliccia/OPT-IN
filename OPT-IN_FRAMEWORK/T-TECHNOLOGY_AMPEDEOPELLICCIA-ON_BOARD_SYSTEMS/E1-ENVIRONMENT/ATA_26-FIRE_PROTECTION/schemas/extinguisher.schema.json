{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ampel360.com/schemas/ata26/extinguisher.schema.json",
  "title": "Fire Extinguisher",
  "description": "Schema for aircraft fire extinguisher specification",
  "type": "object",
  "required": [
    "extinguisher_id",
    "type",
    "agent",
    "capacity",
    "location",
    "installation_date"
  ],
  "properties": {
    "extinguisher_id": {
      "type": "string",
      "description": "Unique identifier for the fire extinguisher",
      "pattern": "^EXT-[A-Z0-9]{4,12}$"
    },
    "type": {
      "type": "string",
      "enum": ["portable", "fixed", "automatic"],
      "description": "Type of fire extinguisher"
    },
    "agent": {
      "type": "string",
      "enum": ["Halon 1301", "HFC-125", "FK-5-1-12", "Water", "CO2", "Dry Chemical"],
      "description": "Fire extinguishing agent"
    },
    "capacity": {
      "type": "object",
      "required": ["value", "unit"],
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "enum": ["lbs", "kg", "liters"]
        }
      }
    },
    "pressure": {
      "type": "object",
      "properties": {
        "nominal_psi": {
          "type": "number",
          "minimum": 0
        },
        "min_psi": {
          "type": "number",
          "minimum": 0
        },
        "max_psi": {
          "type": "number",
          "minimum": 0
        },
        "current_psi": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "location": {
      "type": "object",
      "required": ["zone", "compartment"],
      "properties": {
        "zone": {
          "type": "string",
          "description": "Aircraft zone (e.g., cabin, flight deck, cargo)"
        },
        "compartment": {
          "type": "string",
          "description": "Specific compartment or area"
        },
        "station": {
          "type": "number",
          "description": "Fuselage station"
        },
        "mounting": {
          "type": "string",
          "description": "Mounting location or bracket ID"
        }
      }
    },
    "part_number": {
      "type": "string",
      "description": "Manufacturer part number"
    },
    "serial_number": {
      "type": "string",
      "description": "Unit serial number"
    },
    "manufacturer": {
      "type": "string",
      "description": "Manufacturer name"
    },
    "installation_date": {
      "type": "string",
      "format": "date",
      "description": "Date of installation"
    },
    "service_life": {
      "type": "object",
      "properties": {
        "life_limit_years": {
          "type": "integer",
          "minimum": 0
        },
        "expiration_date": {
          "type": "string",
          "format": "date"
        },
        "hydrostatic_test_date": {
          "type": "string",
          "format": "date"
        },
        "next_hydrostatic_test": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "maintenance": {
      "type": "object",
      "properties": {
        "last_inspection_date": {
          "type": "string",
          "format": "date"
        },
        "next_inspection_date": {
          "type": "string",
          "format": "date"
        },
        "inspection_interval_days": {
          "type": "integer",
          "minimum": 0
        },
        "last_servicing_date": {
          "type": "string",
          "format": "date"
        },
        "weight_check_ok": {
          "type": "boolean",
          "description": "Weight within acceptable range"
        }
      }
    },
    "discharge_indicator": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["mechanical", "pressure_switch", "visual"]
        },
        "status": {
          "type": "string",
          "enum": ["charged", "discharged", "unknown"]
        }
      }
    },
    "regulatory_markings": {
      "type": "array",
      "description": "Required placards and markings",
      "items": {
        "type": "string"
      }
    },
    "traceability": {
      "type": "object",
      "properties": {
        "dpp_id": {
          "type": "string"
        },
        "coc_number": {
          "type": "string",
          "description": "Certificate of Conformance number"
        },
        "batch_number": {
          "type": "string",
          "description": "Agent batch/lot number"
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or comments"
    }
  }
}
