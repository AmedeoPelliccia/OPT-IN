{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "schema_version":"1.0",
  "title":"Water System",
  "type":"object",
  "required":["id","system_type","manufacturer","part_number","serial","installation_date"],
  "properties":{
    "id":{"type":"string"},
    "system_type":{"type":"string","enum":["Potable","Waste","Combined"]},
    "manufacturer":{"type":"string"},
    "part_number":{"type":"string"},
    "serial":{"type":"string"},
    "installation_date":{"type":"string","format":"date"},
    "capacity_l":{"type":"number"},
    "materials":{"type":"array","items":{"type":"string"}},
    "sanitization_method":{"type":"string"},
    "last_sanitization_date":{"type":"string","format":"date"},
    "next_sanitization_due":{"type":"string","format":"date"}
  }
}
