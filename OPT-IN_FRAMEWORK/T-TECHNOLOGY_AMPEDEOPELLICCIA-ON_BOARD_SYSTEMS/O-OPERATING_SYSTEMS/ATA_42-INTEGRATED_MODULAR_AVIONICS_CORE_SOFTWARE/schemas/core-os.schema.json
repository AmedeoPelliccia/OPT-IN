{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ampel360.org/schemas/ata42/core-os.schema.json",
  "title": "ATA 42 Core OS Configuration Schema",
  "description": "Schema for IMA Core Operating System configuration and metadata",
  "type": "object",
  "required": [
    "os_id",
    "os_version",
    "arinc653_version",
    "dal_level",
    "target_platform",
    "partitions",
    "system_config"
  ],
  "properties": {
    "os_id": {
      "type": "string",
      "description": "Unique identifier for the Core OS instance",
      "pattern": "^CORE-OS-[A-Z0-9-]+$"
    },
    "os_version": {
      "type": "string",
      "description": "Core OS software version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "arinc653_version": {
      "type": "string",
      "description": "ARINC 653 specification version",
      "enum": ["P1-5", "P2-1", "P4"]
    },
    "dal_level": {
      "type": "string",
      "description": "Design Assurance Level per DO-178C",
      "enum": ["DAL A", "DAL B", "DAL C", "DAL D", "DAL E"]
    },
    "target_platform": {
      "type": "object",
      "required": ["processor", "architecture", "memory_mib"],
      "properties": {
        "processor": {
          "type": "string",
          "description": "Target processor type"
        },
        "architecture": {
          "type": "string",
          "description": "Processor architecture",
          "enum": ["ARM", "x86_64", "PowerPC", "RISC-V"]
        },
        "memory_mib": {
          "type": "integer",
          "description": "Total system memory in MiB",
          "minimum": 64
        },
        "frequency_mhz": {
          "type": "integer",
          "description": "Processor frequency in MHz"
        }
      }
    },
    "partitions": {
      "type": "array",
      "description": "List of configured partitions",
      "items": {
        "$ref": "#/definitions/partition_ref"
      }
    },
    "system_config": {
      "type": "object",
      "required": ["major_frame_ms", "time_base"],
      "properties": {
        "major_frame_ms": {
          "type": "number",
          "description": "Major frame duration in milliseconds",
          "minimum": 1,
          "maximum": 1000
        },
        "time_base": {
          "type": "string",
          "description": "System time base",
          "enum": ["UTC", "TAI", "GPS"]
        },
        "health_monitor_enabled": {
          "type": "boolean",
          "default": true
        },
        "secure_boot_enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "certification": {
      "type": "object",
      "properties": {
        "do178c_objectives": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tool_qualification": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "structural_coverage": {
          "type": "object",
          "properties": {
            "statement_coverage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "branch_coverage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "mcdc_coverage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        }
      }
    },
    "dpp_entry": {
      "type": "object",
      "description": "Digital Product Passport entry metadata",
      "properties": {
        "passport_id": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "checksum": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    }
  },
  "definitions": {
    "partition_ref": {
      "type": "object",
      "required": ["partition_id", "partition_name"],
      "properties": {
        "partition_id": {
          "type": "integer",
          "minimum": 0
        },
        "partition_name": {
          "type": "string",
          "pattern": "^[A-Z][A-Z0-9_]*$"
        },
        "dal_level": {
          "type": "string",
          "enum": ["DAL A", "DAL B", "DAL C", "DAL D", "DAL E"]
        }
      }
    }
  }
}
