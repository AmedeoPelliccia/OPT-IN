{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ampel360.org/schemas/ata42/health-metric.schema.json",
  "title": "Health Metric Definition Schema",
  "description": "Schema for Core OS health monitoring metric definitions",
  "type": "object",
  "required": ["metric_id", "metric_name", "metric_type", "thresholds"],
  "properties": {
    "metric_id": {
      "type": "string",
      "pattern": "^HM-[A-Z0-9-]+$"
    },
    "metric_name": {
      "type": "string"
    },
    "metric_type": {
      "type": "string",
      "enum": ["CPU_USAGE", "MEMORY_USAGE", "PARTITION_OVERRUN", "IPC_ERROR", "TIMING_VIOLATION", "FAULT_COUNT", "CUSTOM"]
    },
    "unit": {
      "type": "string"
    },
    "thresholds": {
      "type": "object",
      "properties": {
        "warning": {"type": "number"},
        "critical": {"type": "number"},
        "fatal": {"type": "number"}
      }
    },
    "sampling_rate_ms": {
      "type": "number",
      "minimum": 1
    },
    "partition_id": {
      "type": "integer"
    },
    "action_on_exceed": {
      "type": "string",
      "enum": ["LOG", "ALERT", "IDLE_PARTITION", "RESTART_PARTITION", "SYSTEM_RESET"]
    }
  }
}
