{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ampel360.amedeopelliccia.it/schemas/taxi-profile.schema.json",
  "title": "Taxi Profile Schema",
  "description": "Schema for taxi profile log entries",
  "type": "object",
  "required": ["profile_id", "timestamp", "msn", "operator", "route", "conditions"],
  "properties": {
    "profile_id": {
      "type": "string",
      "description": "Unique identifier for the taxi profile"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the taxi operation"
    },
    "msn": {
      "type": "string",
      "description": "Manufacturer Serial Number"
    },
    "operator": {
      "type": "string",
      "description": "Operator/airline identifier"
    },
    "route": {
      "type": "object",
      "required": ["origin", "destination", "distance_m"],
      "properties": {
        "origin": {
          "type": "string",
          "description": "Starting position (e.g., gate, stand)"
        },
        "destination": {
          "type": "string",
          "description": "Ending position (e.g., runway, stand)"
        },
        "distance_m": {
          "type": "number",
          "minimum": 0,
          "description": "Taxi distance in meters"
        },
        "waypoints": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Intermediate waypoints"
        }
      }
    },
    "conditions": {
      "type": "object",
      "required": ["surface", "visibility_m"],
      "properties": {
        "surface": {
          "type": "string",
          "enum": ["dry", "wet", "contaminated", "icy"],
          "description": "Surface condition"
        },
        "visibility_m": {
          "type": "number",
          "minimum": 0,
          "description": "Visibility in meters"
        },
        "wind_kt": {
          "type": "number",
          "minimum": 0,
          "description": "Wind speed in knots"
        },
        "temperature_c": {
          "type": "number",
          "description": "Ambient temperature in Celsius"
        }
      }
    },
    "performance": {
      "type": "object",
      "properties": {
        "duration_s": {
          "type": "number",
          "minimum": 0,
          "description": "Total taxi duration in seconds"
        },
        "avg_speed_kmh": {
          "type": "number",
          "minimum": 0,
          "description": "Average speed in km/h"
        },
        "max_speed_kmh": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum speed in km/h"
        },
        "brake_energy_kj": {
          "type": "number",
          "minimum": 0,
          "description": "Total brake energy in kilojoules"
        }
      }
    },
    "weight": {
      "type": "object",
      "properties": {
        "gross_weight_kg": {
          "type": "number",
          "minimum": 0,
          "description": "Gross weight in kilograms"
        },
        "cg_percent_mac": {
          "type": "number",
          "description": "Center of gravity as percent MAC"
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or observations"
    }
  }
}
