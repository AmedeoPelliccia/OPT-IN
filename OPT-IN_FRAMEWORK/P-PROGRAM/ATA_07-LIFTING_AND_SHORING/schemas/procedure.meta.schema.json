{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ampel360.com/schemas/procedure.meta.schema.json",
  "title": "Procedure Metadata Schema",
  "description": "Schema for procedure metadata",
  "type": "object",
  "required": ["procedure_id", "title", "version", "status", "personnel", "steps"],
  "properties": {
    "procedure_id": {
      "type": "string",
      "pattern": "^PROC_[A-Za-z0-9_-]+$"
    },
    "title": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "status": {
      "type": "string",
      "enum": ["Draft", "Review", "Approved", "Superseded"]
    },
    "personnel": {
      "type": "object",
      "required": ["minimum_crew", "required_roles"],
      "properties": {
        "minimum_crew": {
          "type": "integer",
          "minimum": 1
        },
        "required_roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "qualifications": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "duration": {
      "type": "object",
      "properties": {
        "estimated_hours": {
          "type": "number",
          "minimum": 0
        },
        "complexity": {
          "type": "string",
          "enum": ["Simple", "Moderate", "Complex", "Critical"]
        }
      }
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "mandatory": {
            "type": "boolean",
            "default": true
          }
        }
      }
    },
    "tools_and_equipment": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["item", "quantity"],
        "properties": {
          "item": {
            "type": "string"
          },
          "part_number": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1
          },
          "calibration_required": {
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step_number", "description"],
        "properties": {
          "step_number": {
            "type": "integer",
            "minimum": 1
          },
          "description": {
            "type": "string"
          },
          "warning": {
            "type": "string"
          },
          "caution": {
            "type": "string"
          },
          "note": {
            "type": "string"
          },
          "verification": {
            "type": "string"
          },
          "substeps": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      }
    },
    "quality_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "checkpoint": {
            "type": "string"
          },
          "inspector_required": {
            "type": "boolean"
          }
        }
      }
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "document": {
            "type": "string"
          },
          "section": {
            "type": "string"
          }
        }
      }
    }
  }
}
