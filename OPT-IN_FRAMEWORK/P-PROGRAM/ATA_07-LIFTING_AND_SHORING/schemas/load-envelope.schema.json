{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ampel360.com/schemas/load-envelope.schema.json",
  "title": "Load Envelope Schema",
  "description": "Schema for load envelope data files",
  "type": "object",
  "required": ["version", "aircraft_type", "load_cases", "data_points"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "aircraft_type": {
      "type": "string"
    },
    "units": {
      "type": "object",
      "properties": {
        "load": {
          "type": "string",
          "enum": ["kg", "lb", "N", "kN"]
        },
        "position": {
          "type": "string",
          "enum": ["m", "ft", "in", "%MAC"]
        }
      }
    },
    "load_cases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description"],
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "safety_factor": {
            "type": "number",
            "minimum": 1.0
          }
        }
      }
    },
    "data_points": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["cg_position", "max_load"],
        "properties": {
          "cg_position": {
            "type": "number"
          },
          "max_load": {
            "type": "number",
            "minimum": 0
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "interpolation_method": {
      "type": "string",
      "enum": ["linear", "cubic", "none"],
      "default": "linear"
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "condition": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
